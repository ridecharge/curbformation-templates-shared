{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": " v1.0 Creates an Web Autoscaling Group",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch services into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "ApplicationName": {
      "Type": "String"
    },
    "ConnectionIdleTimeout": {
      "Type": "Number",
      "Default": 60
    },
    "Deploying": {
      "Type": "String",
      "Description": "Whether the deployment is currently in the deploying state",
      "AllowedValues": [
        "True",
        "False"
      ],
      "Default": "False"
    },
    "DeployedAsg": {
      "Type": "String",
      "Description": "The AutoScalingGroup that is considered deployed.",
      "AllowedValues": [
        "A",
        "B"
      ],
      "Default": "A"
    },
    "DockerRepository": {
      "Type": "String"
    },
    "Version": {
      "Type": "String"
    },
    "UserData": {
      "Type": "String",
      "Default": ""
    },
    "InstanceType": {
      "Description": "Instance type for instance pair.",
      "Type": "String",
      "Default": "m3.medium",
      "AllowedValues": [
        "c4.large",
        "m3.medium",
        "m3.large"
      ],
      "ConstraintDescription": "must be a valid EC2 instance type."
    },
    "PreviousVersion": {
      "Type": "String"
    },
    "PreviousImageId": {
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id",
      "Type": "String"
    },
    "LoadBalancerSecurityGroup": {
      "Description": "Security Groups for the instances",
      "Type": "String"
    },
    "InstanceSecurityGroups": {
      "Description": "Security Groups for the instances",
      "Type": "CommaDelimitedList"
    },
    "InstanceProfile": {
      "Description": "IAM Instance Profile for instances",
      "Type": "String",
      "Default": ""
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "CommaDelimitedList"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnets to launch NATs into.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "InstanceSubnets": {
      "Description": "Subnets to launch NATs into.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "ImageId": {
      "Description": "AMI to create instances.",
      "Type": "String",
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id"
    },
    "Scheme": {
      "Type": "String",
      "AllowedValues": [
        "internal",
        "internet-facing"
      ]
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "MinSize": {
      "Type": "Number",
      "Default": "2"
    },
    "MaxSize": {
      "Type": "Number",
      "Default": "2"
    },
    "DesiredCapacity": {
      "Type": "Number",
      "Default": "2"
    },
    "DeployMaxBatchSize": {
      "Type": "Number",
      "Default": "1"
    },
    "DeployMinInstancesInService": {
      "Type": "Number",
      "Default": "1"
    },
    "LoadBalancerPort": {
      "Type": "Number",
      "Default": "80",
      "AllowedValues": [
        "80",
        "443"
      ]
    },
    "InstancePort": {
      "Type": "Number",
      "Default": "8080"
    },
    "InstanceProtocol": {
      "Type": "String",
      "Default": "HTTP"
    },
    "InstanceHealthCheck": {
      "Type": "String",
      "Default": "/health"
    },
    "Cooldown": {
      "Type": "Number",
      "Default": "30"
    },
    "UpdatePauseTime": {
      "Type": "String",
      "Default": "PT0S"
    },
    "HealthCheckGracePeriod": {
      "Type": "Number",
      "Default": "30"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "Serial": {
      "Type": "String",
      "Default": ""
    }
  },
  "Outputs": {
    "CanonicalHostedZoneNameID": {
      "Value": {
        "Fn::If": [
          "UseSSL",
          {
            "Fn::GetAtt": [
              "LoadBalancer",
              "CanonicalHostedZoneNameID"
            ]
          },
          ""
        ]
      }
    },
    "DNSHostedZoneName": {
      "Value": {
        "Fn::If": [
          "UseSSL",
          {
            "Fn::GetAtt": [
              "LoadBalancer",
              "CanonicalHostedZoneName"
            ]
          },
          {
            "Fn::GetAtt": [
              "LoadBalancer",
              "DNSName"
            ]
          }
        ]
      }
    }
  },
  "Conditions": {
    "UseSSL": {
      "Fn::Equals": [
        {
          "Ref": "LoadBalancerPort"
        },
        "443"
      ]
    },
    "IsDeploying": {
      "Fn::Equals": [
        {
          "Ref": "Deploying"
        },
        "True"
      ]
    },
    "PrimaryAsgA": {
      "Fn::Equals": [
        {
          "Ref": "DeployedAsg"
        },
        "A"
      ]
    },
    "PrimaryAsgB": {
      "Fn::Equals": [
        {
          "Ref": "DeployedAsg"
        },
        "B"
      ]
    },
    "CreateAsgA": {
      "Fn::Or": [
        {
          "Condition": "IsDeploying"
        },
        {
          "Condition": "PrimaryAsgA"
        }
      ]
    },
    "CreateAsgB": {
      "Fn::Or": [
        {
          "Condition": "IsDeploying"
        },
        {
          "Condition": "PrimaryAsgB"
        }
      ]
    },
    "UsePreviousAsgA": {
      "Fn::And": [
        {
          "Condition": "IsDeploying"
        },
        {
          "Condition": "PrimaryAsgB"
        }
      ]
    },
    "UsePreviousAsgB": {
      "Fn::And": [
        {
          "Condition": "IsDeploying"
        },
        {
          "Condition": "PrimaryAsgA"
        }
      ]
    }
  },
  "Resources": {
    "AutoScalingAlarms": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Role": {
            "Ref": "ApplicationName"
          },
          "AutoScalingGroupName": {
            "Fn::If": [
              "PrimaryAsgA",
              {
                "Ref": "AutoScalingGroup"
              },
              {
                "Ref": "AutoScalingGroupB"
              }
            ]
          },
          "AlarmName": {
            "Fn::Join": [
              "-",
              [
                {
                  "Ref": "Environment"
                },
                {
                  "Ref": "ApplicationName"
                }
              ]
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/alarms/autoscaling_alarms.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Scheme": {
          "Ref": "Scheme"
        },
        "ConnectionDrainingPolicy": {
          "Enabled": true,
          "Timeout": 60
        },
        "CrossZone": true,
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        },
        "ConnectionSettings": {
          "IdleTimeout": {
            "Ref": "ConnectionIdleTimeout"
          }
        },
        "HealthCheck": {
          "HealthyThreshold": "5",
          "Interval": "10",
          "Target": {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "InstanceProtocol"
                },
                ":",
                {
                  "Ref": "InstancePort"
                },
                {
                  "Ref": "InstanceHealthCheck"
                }
              ]
            ]
          },
          "Timeout": "5",
          "UnhealthyThreshold": "3"
        },
        "Listeners": [
          {
            "InstancePort": {
              "Ref": "InstancePort"
            },
            "InstanceProtocol": {
              "Ref": "InstanceProtocol"
            },
            "LoadBalancerPort": {
              "Ref": "LoadBalancerPort"
            },
            "Protocol": {
              "Fn::If": [
                "UseSSL",
                "HTTPS",
                "HTTP"
              ]
            },
            "SSLCertificateId": {
              "Fn::If": [
                "UseSSL",
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:iam::",
                      {
                        "Ref": "AWS::AccountId"
                      },
                      ":server-certificate/",
                      {
                        "Ref": "Environment"
                      }
                    ]
                  ]
                },
                {
                  "Ref": "AWS::NoValue"
                }
              ]
            }
          }
        ],
        "LoadBalancerName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              {
                "Ref": "ApplicationName"
              }
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Role",
            "Value": "Application"
          },
          {
            "Key": "Application",
            "Value": {
              "Ref": "ApplicationName"
            }
          }
        ]
      }
    },
    "AsgSnsTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              {
                "Ref": "ApplicationName"
              },
              "autoscaling-notifications"
            ]
          ]
        }
      }
    },
    "AsgLaunchConfiguration": {
      "Condition": "CreateAsgA",
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "EbsOptimized": false,
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "ImageId": {
          "Fn::If": [
            "UsePreviousAsgA",
            {
              "Ref": "PreviousImageId"
            },
            {
              "Ref": "ImageId"
            }
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "Environment"
        },
        "SecurityGroups": {
          "Ref": "InstanceSecurityGroups"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/sh",
                "\nexport DOCKER_REPO=",
                {
                  "Ref": "DockerRepository"
                },
                "\nexport SERIAL=",
                {
                  "Ref": "Serial"
                },
                "\nexport LOGGLY_TOKEN=",
                {
                  "Ref": "LogglyToken"
                },
                "\nexport NR_TOKEN=",
                {
                  "Ref": "NewRelicToken"
                },
                "\nexport ENVIRONMENT=",
                {
                  "Ref": "Environment"
                },
                "\nexport SERVICE_NAME=",
                {
                  "Ref": "ApplicationName"
                },
                "\nexport VERSION=",
                {
                  "Fn::If": [
                    "UsePreviousAsgA",
                    {
                      "Ref": "PreviousVersion"
                    },
                    {
                      "Ref": "Version"
                    }
                  ]
                },
                "\n",
                {
                  "Ref": "UserData"
                }
              ]
            ]
          }
        }
      }
    },
    "AutoScalingGroup": {
      "UpdatePolicy": {
        "AutoScalingRollingUpdate": {
          "MinInstancesInService": {
            "Ref": "DeployMinInstancesInService"
          },
          "MaxBatchSize": {
            "Ref": "DeployMaxBatchSize"
          },
          "PauseTime": {
            "Ref": "UpdatePauseTime"
          }
        }
      },
      "Condition": "CreateAsgA",
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": {
          "Ref": "AvailabilityZones"
        },
        "NotificationConfiguration": {
          "NotificationTypes": [
            "autoscaling:EC2_INSTANCE_LAUNCH",
            "autoscaling:EC2_INSTANCE_LAUNCH_ERROR",
            "autoscaling:EC2_INSTANCE_TERMINATE",
            "autoscaling:EC2_INSTANCE_TERMINATE_ERROR",
            "autoscaling:TEST_NOTIFICATION"
          ],
          "TopicARN": {
            "Ref": "AsgSnsTopic"
          }
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "Cooldown": {
          "Ref": "Cooldown"
        },
        "DesiredCapacity": {
          "Ref": "DesiredCapacity"
        },
        "HealthCheckGracePeriod": {
          "Ref": "HealthCheckGracePeriod"
        },
        "HealthCheckType": "ELB",
        "LaunchConfigurationName": {
          "Ref": "AsgLaunchConfiguration"
        },
        "MaxSize": {
          "Ref": "MaxSize"
        },
        "MinSize": {
          "Ref": "MinSize"
        },
        "VPCZoneIdentifier": {
          "Ref": "InstanceSubnets"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "ApplicationName"
                  }
                ]
              ]
            },
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            },
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Role",
            "Value": {
              "Ref": "ApplicationName"
            },
            "PropagateAtLaunch": "true"
          }
        ]
      }
    },
    "AsgLaunchConfigurationB": {
      "Condition": "CreateAsgB",
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "EbsOptimized": false,
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        
        "ImageId": {
          "Fn::If": [
            "UsePreviousAsgB",
            {
              "Ref": "PreviousImageId"
            },
            {
              "Ref": "ImageId"
            }
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "Environment"
        },
        "SecurityGroups": {
          "Ref": "InstanceSecurityGroups"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/sh",
                "\nexport DOCKER_REPO=",
                {
                  "Ref": "DockerRepository"
                },
                "\nexport SERIAL=",
                {
                  "Ref": "Serial"
                },
                "\nexport LOGGLY_TOKEN=",
                {
                  "Ref": "LogglyToken"
                },
                "\nexport NR_TOKEN=",
                {
                  "Ref": "NewRelicToken"
                },
                "\nexport ENVIRONMENT=",
                {
                  "Ref": "Environment"
                },
                "\nexport SERVICE_NAME=",
                {
                  "Ref": "ApplicationName"
                },
                "\nexport VERSION=",
                {
                  "Fn::If": [
                    "UsePreviousAsgB",
                    {
                      "Ref": "PreviousVersion"
                    },
                    {
                      "Ref": "Version"
                    }
                  ]
                },
                "\n",
                {
                  "Ref": "UserData"
                }
              ]
            ]
          }
        }
      }
    },
    "AutoScalingGroupB": {
      "UpdatePolicy": {
        "AutoScalingRollingUpdate": {
          "MinInstancesInService": {
            "Ref": "DeployMinInstancesInService"
          },
          "MaxBatchSize": {
            "Ref": "DeployMaxBatchSize"
          },
          "PauseTime": {
            "Ref": "UpdatePauseTime"
          }
        }
      },
      "Condition": "CreateAsgB",
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": {
          "Ref": "AvailabilityZones"
        },
        "NotificationConfiguration": {
          "NotificationTypes": [
            "autoscaling:EC2_INSTANCE_LAUNCH",
            "autoscaling:EC2_INSTANCE_LAUNCH_ERROR",
            "autoscaling:EC2_INSTANCE_TERMINATE",
            "autoscaling:EC2_INSTANCE_TERMINATE_ERROR",
            "autoscaling:TEST_NOTIFICATION"
          ],
          "TopicARN": {
            "Ref": "AsgSnsTopic"
          }
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "Cooldown": {
          "Ref": "Cooldown"
        },
        "DesiredCapacity": {
          "Ref": "DesiredCapacity"
        },
        "HealthCheckGracePeriod": {
          "Ref": "HealthCheckGracePeriod"
        },
        "HealthCheckType": "ELB",
        "LaunchConfigurationName": {
          "Ref": "AsgLaunchConfigurationB"
        },
        "MaxSize": {
          "Ref": "MaxSize"
        },
        "MinSize": {
          "Ref": "MinSize"
        },
        "VPCZoneIdentifier": {
          "Ref": "InstanceSubnets"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "ApplicationName"
                  }
                ]
              ]
            },
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            },
            "PropagateAtLaunch": "true"
          },
          {
            "Key": "Role",
            "Value": {
              "Ref": "ApplicationName"
            },
            "PropagateAtLaunch": "true"
          }
        ]
      }
    }
  }
}
